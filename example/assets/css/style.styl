// buton
$button-default = $normal-white;
$button-primary = $light-green;
$button-warning = $normal-red;
$button-info = $normal-blue;
$button-disable = $normal-gray;
$button-default-border = #dedfe6
$button-primary-border = #67c23a
$button-warning-border = #f56c6c
$button-info-border = #409eff
flex-box($justify-content = flex-start, $align-items = center, $flex-direction = row) {
 display: flex;
 justify-content: $justify-content;
 align-items: $align-items;
 flex-direction: column;
}
.bg {
 background-repeat: no-repeat;
 background-size: 100% 100%;
 background-position: center;
}
.text-ellipsis {
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
}
@keyframes rotate360 {
 0% {
  transform: rotate(0deg); /* 动画起始的时候旋转了0度 */
 }
 100% {
  transform: rotate(360deg); /* 动画结束的时候旋转了360度 */
 }
}